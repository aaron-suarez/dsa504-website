{
  "parser": "babel-eslint",
  "plugins": ["react-hooks"],
  "extends": ["mdarens"],
  "rules": {
    "react/prop-types": ["off"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "react/jsx-no-bind": "ignore"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
